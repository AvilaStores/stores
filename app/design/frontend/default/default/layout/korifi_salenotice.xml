<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>css/korifi.salenotice.css</stylesheet></action>
            <action method="addItem" ifconfig="salenotice/inclusion/jquery"><type>skin_js</type><name>js/jquery-1.8.1.min.js</name></action>
            <action method="addItem" ifconfig="salenotice/inclusion/noconflict"><type>skin_js</type><name>js/jquery-noconflict.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/korifi.salenotice.js</name></action>
        </reference>
        <reference name="after_body_start">
            <block type="salenotice/lastorders" name="lastorders_init" />
        </reference>
    </default>
</layout>